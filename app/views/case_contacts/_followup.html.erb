<% if followup %>
  <div class="mr-2">
    <%= button_to resolve_followup_path(followup), method: :patch, class: "btn btn-success" do %>
      Resolve Reminder
    <% end %>
  </div>
<% else %>
  <div class="mr-2">
    <button type="button"
            class="btn btn-outline-primary followup-button"
            id="followup-button-<%= contact.id %>">
      Make Reminder
    </button>
  </div>
<% end %>
